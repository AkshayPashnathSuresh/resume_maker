<div class="container">

  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user' }) do |f| %>
                <%= bootstrap_devise_error_messages! %>
                <div class="form-group">
                  <%= f.text_field :email, autocomplete: 'email', class: 'form-control form-control-user',
                      placeholder: 'Email Address' %>
                </div>

                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-user',
                      placeholder: 'Password' %>
                  </div>

                  <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control form-control-user', 
                      placeholder: 'Repeat Password' %>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <small class="form-text text-muted"><%= t('custom_registrations.no_of_chars_validation_msg') %></small>
                    <small class="form-text text-muted"><%= t('custom_registrations.lower_case_validation_msg') %></small>
                    <small class="form-text text-muted"><%= t('custom_registrations.digit_validation_msg') %></small>
                  </div>

                  <div class="col-sm-6">
                    <small class="form-text text-muted"><%= t('custom_registrations.upper_case_validation_msg') %></small>
                    <small class="form-text text-muted"><%= t('custom_registrations.symbol_validation_msg') %></small>
                  </div>
                </div>

                <div class="form-group">
                  <small class="form-text text-danger font-italic"><%= t('custom_registrations.password_recovery_notice') %></small>
                </div>

                <div class="form-group">
                  <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-user btn-block' %>
                </div>
              <% end %>
                            
              <div class="text-center">
                <%= render 'devise/shared/links' %>
              </div>
            </div>
          </div>
        </div>
      </div>
   </div>

</div>