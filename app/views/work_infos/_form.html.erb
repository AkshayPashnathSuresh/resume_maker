<% @works.each.with_index(1) do |work,index| %>
    <div id="works<%= index %>">
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <span class="required-input">
                    <%= text_field_tag "works[#{index}][company_name]", work.company_name, 
                        class: 'form-control form-control-user', placeholder: t('work_infos.company_name') %>
                </span>
            </div>

            <div class="col-sm-6">
                <span class="required-input">
                    <%= text_field_tag "works[#{index}][designation]", work.designation,
                        class: 'form-control form-control-user', placeholder: t('work_infos.designation') %>
                </span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <span class="required-input">
                    <%= label_tag t('common.from') %>
                    <%= date_field_tag "works[#{index}][work_from]", work.work_from,
                        max: Date.today, class: 'form-control form-control-user' %>
                </span>
            </div>

            <div class="col-sm-6">
                <span class="nonrequired-input">
                    <%= label_tag t('common.to')%>
                    <%= date_field_tag "works[#{index}][work_to]", work.work_to, 
                        max: Date.today, class: 'form-control form-control-user' %>
                </span>
            </div>
        </div>
        <div class="form-group">
            <span class="required-input">
                <%= text_area_tag "works[#{index}][job_description]", work.job_description, 
                    class: 'form-control form-control-textarea', placeholder: t('work_infos.job_description'), size: "50x8" %>
            </span>
        </div>
        <div class="form-group row">
            <div class="col-sm-12 ">
                <%= link_to t('work_infos.delete_button'), delete_work_path(:work_index => index),
                    method: :get ,remote: true, name: 'delete_button', class: 'btn btn-secondary btn-user float-right' %>
            </div>
        </div>
        <hr>
    </div>
    <% if @works.last == work %>
        <div id="newwork">
        </div>
    <% end %>
<% end %>
<%= hidden_field_tag 'submittingrecordcount', @record_count %>
<%= hidden_field_tag 'workindex', @record_count %>
<% if @works.empty?() %>
    <div id="newwork">
    </div>
<% end %>
<div class="form-group row">
    <div class="col-sm-12 ">
        <%= button_tag t('work_infos.add_button'), type: 'button', onclick: 'addWork()', class: 'btn btn-secondary btn-user' %>
        <%= submit_tag t('common.submit'), id: 'submit', class: 'btn btn-secondary btn-user float-right', style: @works.empty?() ? "display:none" : "" %>
    </div>
</div>