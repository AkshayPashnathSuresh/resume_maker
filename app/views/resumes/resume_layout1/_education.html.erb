<table class="educationTable">
  <tbody>
    <tr valign="top">
      <th class="sectionHeading" style="width: 100%;" colspan="2">
        <i class="fa fa-graduation-cap" aria-hidden="true"></i>&nbsp;EDUCATION
      </th>
    </tr>
    <% @educations.each do |education| %>
      <tr>
        <td class="experienceDesignation"style="width: 80%;" colspan="2">
          <%= education.course_name %>
        </td>
      </tr>
      <tr valign="top">
        <td style="width: 100%;" colspan="2">
          <%= education.institution_name + " | " +  education.studied_from.strftime("%Y-%m") + " ~ " + (education.studied_to.to_s.empty? ? "Present" : education.studied_to.strftime("%Y-%m"))%>
        </td>
      </tr>
      <% education.achivements.lines.each do |achivement| %>
        <tr valign="top">
          <td width="5%" class="bulletPointMainList" align="center">
            <i class="fa fa-circle fa-xs" aria-hidden="true"></i>
          </td>
          <td style="width: 95%;">
            <%= achivement %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>