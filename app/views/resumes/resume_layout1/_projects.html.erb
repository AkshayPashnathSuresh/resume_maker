<table class="educationTable">
  <tbody>
    <tr valign="top">
      <th class="sectionHeading" style="width: 100%; color: <%= @color_theme %>" colspan="2">
        <i class="fa fa-tasks" aria-hidden="true"></i>&nbsp;PROJECTS
      </th>
    </tr>
    <% @projects.each do |project| %>
      <tr>
        <td class="experienceDesignation"style="width: 80%;" colspan="2">
          <%= project.title %>
        </td>
      </tr>
      <% project.description.lines.each do |description| %>
        <tr>
          <td width="5%" class="bulletPointMainList" align="center">
            <i class="fa fa-circle fa-xs" aria-hidden="true"></i>
          </td>
          <td style="width: 95%;" class="text-justify mainBulletPointFontSize">
            <%= description %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>